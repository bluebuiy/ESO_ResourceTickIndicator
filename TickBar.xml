<GuiXml> 
   <Controls>
   <TopLevelControl name="ResourceTickBar" clampedToScreen="true" mouseEnabled="true" movable="true" hidden="false">	
      <Dimensions x="300" y="50" />
      <Anchor point="TOPLEFT" relativeTo="GuiRoot" relativePoint="CENTER" offsetX="0" offsetY="0"/>
      <OnMoveStop>
        RTIaddon.TickBarMoved()
      </OnMoveStop>
      <Controls>
         <Backdrop name="$(parent)Backdrop" edgeColor="FF0000" centerColor="6495ED" alpha="0.6" >
            <Dimensions x="300" y="50" />
            <Anchor point="TOPLEFT"  relativeTo="$(parent)" relativePoint="TOPLEFT"/>
            <Edge edgeSize="6" />
         </Backdrop>
 
         <Backdrop name="$(parent)StatusBar" centerColor="e2e22b" alpha="1">
            <Dimensions x="288" y="38" />
            <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" offsetX="6" offsetY="6"/>
            <Edge edgeSize="1" />
         </Backdrop>
      </Controls>
   </TopLevelControl>
   </Controls>
</GuiXml>